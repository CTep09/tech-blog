<div class='posts'>
    <article class='card'>
      <div class='card-title'>
        <h2>
          {{post.title}}
        </h2>
        <div>
          Posted by
          {{post.user.username}}
          on
          {{format_date post.date_created}}
        </div>
      </div>
      <div class='card-body'>
        {{post.body}}
      </div>
    </article>
</div>


<script src="/js/edit.js"></script>